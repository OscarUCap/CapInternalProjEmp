@model Employee

@{
    ViewBag.Title = "Edit Employee";
}

<h3>
@* Edit Page for @Model.Name
ID: @Model.Id *@
</h3>



<div>
    <form asp-controller="employee" asp-action="edit" method="post">
        <input hidden asp-for="Id">
        @* <input hidden asp-for="Email">
        <input hidden asp-for="Department"> *@
        
        
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-50">
                <input asp-for="Name" class="form-control"/> 
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-50">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label" placeholder="Please Select"></label>
            <div class="col-sm-50">
                <select asp-for="Department" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Dept>()" >
                            <option value="">Please Select</option>
                </select>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-primary m-2">Finish edit</button>
            <a asp-controller="employee" asp-action="List" class="btn btn-danger">Back</a>
        </div>


    </form>




</div>